<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Activities.RescueTeamDashboard">

    <ImageButton
        android:id="@+id/voiceBtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_mic"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_ar_map"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:text="AR Map" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_ar_camera"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="AR Camera" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/snd_msg2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Neumorph.Button"
        android:layout_marginVertical="10dp"
        android:onClick="button_click2"
        app:neumorph_shapeType="flat"
        android:textAlignment="center"
        android:text="Get Victim Locations"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylcerView2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="275dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13sp"
        android:text="Team Name: " />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13sp"
        android:text="Assigned Disaster: " />
</LinearLayout>